Задание 1

SELECT c.login, COUNT(o."orderId") AS "order amount"
FROM "Couriers" AS c
LEFT JOIN "Orders" AS o ON c.id = o."courierId" AND o."inDelivery" = 'true'
GROUP BY c.login;


Задание 2

SELECT track,
    CASE
      WHEN finished = true THEN 2
      WHEN cancelled = true THEN -1
      WHEN "inDelivery" = true THEN 1
      ELSE 0
    END AS status
FROM "Orders"
ORDER BY status;
